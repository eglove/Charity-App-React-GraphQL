enum Permission {
    ADMIN
    USER
    CHARITYCREATE
    CHARITYUPDATE
    CHARITYDELETE
    PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
  favorites: [Favorite!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Charity {
    id: ID! @id
    ein: String! @unique
    name: String!
    description: String!
    website: String
    image: String
    largeImage: String
    imageDescription: String
    street: String
    city: String
    state: String
    zip: String
    user: User!
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Favorite {
    id: ID! @id
    charity: Charity #relationship to favorite
    user: User! #relationship to user
    donations: [Donation]!
}

type Donation {
    id: ID! @id
    amount: Float! @default(value: 0)
    dateDonated: DateTime!
    favorite: Favorite!
}